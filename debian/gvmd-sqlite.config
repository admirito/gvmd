#!/bin/sh
# config script for gvmd-sqlite
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <config> `configure' <installed-version>
#        * <config> `reconfigure' <installed-version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package

case "$1" in
    configure|reconfigure)

    if [ -e /usr/share/debconf/confmodule ]; then
	. /usr/share/debconf/confmodule

	if [ -e /usr/share/dbconfig-common/dpkg/config.sqlite3 ]; then
	    . /usr/share/dbconfig-common/dpkg/config.sqlite3

	    dbc_basepath="/var/lib/gvm/gvmd"
	    dbc_dbname="gvmd.db"
	    dbc_go gvmd-sqlite $@

	    dbc_basepath="/var/lib/gvm/gvmd/cert"
	    dbc_dbname="cert.db"
	    dbc_go gvmd-sqlite-cert $@

	    dbc_basepath="/var/lib/gvm/gvmd/scap"
	    dbc_dbname="scap.db"
	    dbc_go gvmd-sqlite-scap $@
	fi
    fi
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
